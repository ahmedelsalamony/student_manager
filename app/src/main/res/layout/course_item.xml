<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<android.support.v7.widget.CardView
android:layout_marginTop="10dp"
   android:id="@+id/cardView_RequestsStudent"
    app:cardElevation="5dp"

     android:layout_marginRight="10dp"
    app:cardCornerRadius="6dp"
    app:cardMaxElevation="9dp"
    android:layout_marginLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:paddingLeft="10dp"
        android:textSize="17sp"
        android:textColor="#000"
        android:text="course name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_CourseName" />



    <TextView
        android:paddingLeft="10dp"

        android:textSize="17sp"
        android:textColor="#000"
        android:text="course hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_CourseHours" />


    <TextView
        android:paddingLeft="10dp"

        android:textSize="17sp"
        android:textColor="#000"
        android:text="course code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_CourseCode" />

    <TextView
        android:paddingLeft="10dp"

        android:paddingRight="10dp"
        android:textSize="17sp"
        android:textColor="#000"
        android:text="course number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_CourseNumber" />


</LinearLayout>
</android.support.v7.widget.CardView>
<Space
    android:layout_width="match_parent"
    android:layout_height="8dp" />
</LinearLayout>